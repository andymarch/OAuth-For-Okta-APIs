<div class="content">
    <div class="section">
        <h1>Add Team Member</h1>
        <i class="explainer-icon fas fa-info-circle" onclick="toggle('explainer-add')"></i>
        <div class="explainer" id="explainer-add" style="display:none">
        <pre class="code" id="command-add">curl -v POST {{tenant}}/api/v1/users?activate=true \
-H "Content-Type: application/json" \
-H "Authorization: Bearer <span class="token">
{{tokenSet.access_token}}</span>" \
--data-raw '{
  "profile": {
    "firstName": "First",
    "lastName": "Last",
    "email": "test@test.com",
    "login": "test@test.com"
  },
  "groupIds": [
    "{{groupId}}"
  ]
}'<i class="copyButton copycontrol far fa-copy" data-clipboard-target="#command-add"></i></pre>
        </div>
        <form action="/addTeamMember/{{groupId}}" method="POST">
        <input type="hidden" value="{{groupId}}"/>
            <div class="section">
                <label for="name">Name</label>
                <input type="text" name="name" value="{{user.name}}"
                pattern=".*\s.*" title="firstname<space>lastname"></input>
                <label for="phonenumber">Phone Number</label>
                <input type="text" name="phonenumber"
                value="{{user.phoneNumber}}" pattern="[0-9]+" title="Only numbers"></input>
                <label for="email">Email</label>
                <input type="email" name="email" value="{{user.email}}"></input>
                <button class="btn-positive" type="submit">Submit</button>
            </div>
        </form>
        <div>
            <form action="/">
                <input type="submit" class="btn-negative" value="Cancel" />
            </form>
        </div>
    </div>
    <div class="section errorMsg">
        {{error}}
    </div>
</div>